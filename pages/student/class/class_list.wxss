.list {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  border-bottom: 1rpx solid #efefef;
  padding: 10rpx 0rpx 10rpx 0rpx;
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  height: 100%;
  background: #fff;
}

.item {
  display: flex;
  width: 100%;
  align-items: center;
  height: 130rpx;
  border-bottom: 1rpx solid #efefef;
  padding: 10rpx 0rpx 10rpx 0rpx;
  position: relative;
}

.middle {
  margin-left: 80rpx;
  float: left;
  width: 60%;
}

.name {
  font-size: 30rpx;
}
.dismiss {
  font-size: 30rpx;
  background-color: #1bd0bd;
  width: 180rpx;
  height: 70rpx;
  border-radius: 100rpx;
  color: #fff;
  margin: 70rpx auto;
  text-align: center;
  justify-content: center;
  display: flex;
  align-items: center;
}
