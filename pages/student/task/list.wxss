.list {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  border-bottom: 1rpx solid #efefef;
  padding: 10rpx 0rpx 10rpx 0rpx;
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  height: 100%;
  background: #fff;
}

.item {
  display: flex;
  width: 100%;
  align-items: center;
  height: 130rpx;
  border-bottom: 1rpx solid #efefef;
  padding: 10rpx 0rpx 10rpx 0rpx;
  position: relative;
}

.middle {
  margin-left: 80rpx;
  float: left;
  width: 50%;
}

.title {
  font-size: 30rpx;
}

.name {
  margin-top: 8rpx;
  font-size: 25rpx;
  color: #7a7a7a;
}

.right {
  align-items: center;
  float: right;
  width: 30%;
}

.detail {
  font-size: 30rpx;
  background-color: #1bd0bd;
  width: 130rpx;
  height: 100rpx;
  border-radius: 30rpx;
  color: #fff;
  margin: 20rpx 10rpx 20rpx 10rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  align-items: center;
}
