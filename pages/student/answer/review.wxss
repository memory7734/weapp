.content {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0rpx 10rpx 0rpx;
  margin: 10rpx;
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  border-bottom: 1rpx solid #efefef;
  font-size: 30rpx;
  background: #fff;
}
.score {
  font-size: 30rpx;
  background-color: #eef6f6;
  height: 80rpx;
  margin: 10rpx 30rpx 0 30rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.comment {
  font-size: 28rpx;
  background-color: #fff;
  width: 675rpx;
  margin: 10rpx 30rpx 30rpx 30rpx;
  display: flex;
  margin-bottom: 30rpx;
}