.page {
  height: 100%;
}

.content {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0rpx 10rpx 0rpx;
  margin: 30rpx;
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  border-bottom: 1rpx solid #efefef;
  font-size: 30rpx;
  background: #fff;
}

.image {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
