<view wx:if='{{!classid}}' class="create-class">
  <form bindsubmit="formSubmit">
    <view class="section">
      <input class='input' name="class_name" placeholder="请输入班级名称" />
    </view>
    <view class='btn-area'>
      <button class='submit' formType='submit'>提交</button>
    </view>
  </form>
</view>
<view class='tip' wx:else>
  <text>班级id为{{classid}},已复制到剪贴板，可直接进入群聊分享</text>
</view>