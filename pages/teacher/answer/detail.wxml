<view>
  <view class="issues-panel">
    <view>
      {{title}}
    </view>
    <view>{{content}}</view>
  </view>
  <view class="picker">
    班级：{{array[index].name}}
  </view>
  <view wx:if='{{urlArr!=null}}'>
    <view wx:for="{{urlArr}}" wx:for-item="item" wx:key="*this">
      <image src="{{item}}"></image>
    </view>
  </view>
</view>
<view >
  <form bindsubmit="formSubmit">
    <text class="issues-label">评论</text>
    <view class="issues-panel">
      <view class="issues-input {{(showError&&!title)?'error':''}}">
        <input value='{{score}}' placeholder="请输入评分" name="score" />
      </view>
      <textarea value='{{comment}}' cursor-spacing="50" placeholder="请输入评语" name="comment"></textarea>
    </view>
    <button formType='submit'>提交</button>
  </form>

</view>